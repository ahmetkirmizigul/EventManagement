@model List<EventManagement.Models.Event>

<h2>Planlanan Etkinlikler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Tarih</th>
            <th>Yer</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Title</td>
                <td>@evt.Date.ToString("dd/MM/yyyy")</td>
                <td>@evt.Location</td>
                <td>
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Event" asp-action="Create" class="btn btn-primary">Yeni Etkinlik Ekle</a>
<a asp-controller="Participant" asp-action="Create" class="btn btn-secondary">Yeni Katılımcı Ekle</a>
