@model List<EventManagement.Models.Participant>

<h2>Katılımcılar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>E-posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var participant in Model)
        {
            <tr>
                <td>@participant.FirstName</td>
                <td>@participant.LastName</td>
                <td>@participant.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@participant.Id" class="btn btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Katılımcı Ekle</a>
